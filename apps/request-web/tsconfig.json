{
  "extends": "@dothis/config/tsconfig-nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "jsxImportSource": "@emotion/react"
  },
  "include": ["./src/**/*", "next-env.d.ts", "../../types/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "./public/**/*", "src/**/*.stories.(tsx|jsx)"]
}
