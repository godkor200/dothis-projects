{
  "extends": "../../config/tsconfig/tsconfig-nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "~/*": [
        "./*"
      ]
    },
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./public/**/*"
  ]
}
